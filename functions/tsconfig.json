{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noEmit": false
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../types/**/*.d.ts"
  ]
}
